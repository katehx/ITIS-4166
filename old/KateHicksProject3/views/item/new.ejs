<%- include('../partials/header.ejs')%>
    <h1>Sell to Us!</h1>
    <p>Make some room for new tools and sell your old ones to Hammerhead Hardware. We accept tools of all conditions
        just fill out our form to see how much we can offer you.</p>

    <form action="/items" method="POST" enctype="multipart/form-data">

        <!-- Condition Dropdown -->
        <label for="condition">Condition</label>
        <select id="condition" name="condition" required>
            <option value="" disabled selected>Select condition</option>
            <option value="New">New</option>
            <option value="Like New">Like New</option>
            <option value="Used - Good">Used - Good</option>
            <option value="Used - Fair">Used - Fair</option>
            <option value="Damaged">Damaged</option>
        </select>

        <!-- Title Field -->
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Cordless Drill, Hacksaw, Plyers, Etc." required>

        <!-- Seller Field -->
        <label for="seller">Seller</label>
        <input type="text" id="seller" name="seller" placeholder="First Last" required>

        <!-- Price Field -->
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="Enter item price" step="0.01" min="0.01" required>

        <!-- Details Field -->
        <label for="details">Details</label>
        <textarea id="details" name="details" rows="4" placeholder="Enter item details" required minlength="10"></textarea>

        <!-- Image Upload Field -->
        <label for="image">Upload Image</label>
        <input type="file" id="image" name="image" accept="image/*" required>

        <!-- Submit Button -->
        <button type="submit">Submit Listing</button>
    </form>
    <%- include('../partials/footer.ejs')%>